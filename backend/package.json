{
  "name": "@gluip/chart-canvas-mcp",
  "version": "0.1.5",
  "description": "MCP server for creating interactive visualizations (charts, diagrams, tables) and querying SQLite databases through AI assistants",
  "author": "Martijn",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "chart-canvas-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "visualization",
    "charts",
    "echarts",
    "mermaid",
    "ai",
    "llm",
    "sqlite",
    "database",
    "sql",
    "query"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gluip/chart-canvas.git"
  },
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build && cd ../frontend && npm run build",
    "prepublishOnly": "cp ../README.md . && cp ../LICENSE .",
    "dev": "tsx src/index.ts",
    "dev:api": "tsx src/api-server.ts",
    "start": "node dist/index.js",
    "start:prod": "npm run build:all && node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "open": "^10.1.0",
    "better-sqlite3": "^11.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.10.5",
    "@types/better-sqlite3": "^7.6.12",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2"
  }
}
